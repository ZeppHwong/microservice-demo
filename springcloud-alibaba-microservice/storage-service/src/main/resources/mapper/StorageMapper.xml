<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.demo.storage.infra.mapper.StorageMapper">


    <update id="reduceStorage" parameterType="cn.demo.storage.infra.valueobject.Storage">
        <selectKey keyProperty="count" resultType="java.lang.Integer" order="AFTER">
            select storage_tbl.count  from storage_tbl where commodity_code = #{commodityCode}
        </selectKey>
        update storage_tbl a set count = count - #{count} where commodity_code = #{commodityCode}
    </update>

</mapper>